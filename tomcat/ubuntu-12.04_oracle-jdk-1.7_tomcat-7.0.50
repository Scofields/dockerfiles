FROM rstiller/java:ubuntu-12.04_oracle_jdk-1.7

RUN apt-get -q update
RUN apt-get install -y wget
RUN wget --output-document=/usr/share/apache-tomcat.tar.gz http://www.eu.apache.org/dist/tomcat/tomcat-7/v7.0.50/bin/apache-tomcat-7.0.50.tar.gz
RUN cd /usr/share ; tar xfvz apache-tomcat.tar.gz

CMD ['/usr/share/apache-tomcat-*/bin/startup.sh']
