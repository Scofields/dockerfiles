FROM rstiller/java:debian-7.2_openjdk_jdk-1.7

RUN apt-get -q update
RUN apt-get install -y wget
RUN wget --output-document=/usr/share/apache-tomcat.tar.gz http://archive.apache.org/dist/tomcat/tomcat-6/v6.0.39/bin/apache-tomcat-6.0.39.tar.gz
RUN cd /usr/share ; tar xfvz apache-tomcat.tar.gz

CMD ['/usr/share/apache-tomcat-*/bin/startup.sh']
