FROM rstiller/java:debian-7.1_openjdk_jdk-1.7

RUN apt-get -q update
RUN apt-get install -y wget
RUN wget --output-document=/usr/share/apache-tomcat.tar.gz http://archive.apache.org/dist/tomcat/tomcat-8/v8.0.1/bin/apache-tomcat-8.0.1.tar.gz
RUN cd /usr/share ; tar xfvz apache-tomcat.tar.gz

CMD ['/usr/share/apache-tomcat-*/bin/startup.sh']
