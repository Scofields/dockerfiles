FROM rstiller/java:ubuntu-12.04_openjdk-jdk-1.7
EXPOSE 8080

RUN apt-get update
RUN apt-get install -y wget unzip
RUN wget --no-cookie --output-document=orion.zip http://download.eclipse.org/orion/drops/R-3.0-201306251555/eclipse-orion-3.0-linux.gtk.x86_64.zip
RUN unzip orion.zip -d .
RUN rm orion.zip

CMD ['eclipse/orion']
