FROM tianon/debian:7.0

RUN apt-get update
RUN apt-get install -y wget
RUN wget --output-document=/usr/src/jre.tar.gz --no-cookies --no-check-certificate http://javadl.sun.com/webapps/download/AutoDL?BundleId=81812
RUN cd /usr/src ; tar -xzvf jre.tar.gz
RUN rm /usr/src/jre.tar.gz
RUN mkdir /usr/lib/jvm ; mv /usr/src/jre* /usr/lib/jvm/
RUN ln -s /usr/lib/jvm/jre*/bin/* /usr/bin/
ENV JAVA_HOME /usr/lib/jvm/jre1.7.0_45/
